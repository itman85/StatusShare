<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/llFeedItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAuthor"
                style="@style/NormalText"
                android:textStyle="bold"
                android:text="User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_half"
                android:layout_marginStart="@dimen/common_padding"
                android:layout_marginBottom="@dimen/common_padding_half"
                android:maxLines="1"
                android:ellipsize="end"/>
            <LinearLayout
                android:id="@+id/llStatusItemAction"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/ivStatusItemAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dropdown"
                    android:padding="5dp"/>
                <com.phannguyen.statusshare.ui.components.views.StatusActionPopupLayout
                    android:id="@+id/spStatusItemAction"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llUpdatedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"/>
            <TextView
                android:id="@+id/tvUpdatedTime"
                style="@style/SmallText"
                android:text="1 hour ago"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginStart="@dimen/common_padding_half"/>
            <TextView
                android:id="@+id/tvEdit"
                style="@style/SmallText"
                android:textStyle="bold"
                android:text="Edited"
                android:layout_marginStart="@dimen/common_padding_half"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvStatusText"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_status_text"
            android:layout_marginTop="@dimen/common_padding_half"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_marginEnd="@dimen/common_padding"
            android:layout_marginBottom="@dimen/common_padding"
            />

        <com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout
            android:id="@+id/flDefaultImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:foreground="@drawable/item_selector">
            <com.phannguyen.statusshare.ui.components.views.RatioImageView
                android:id="@+id/ivDefaultImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout>
        <LinearLayout
            android:id="@+id/llSub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_sub_photo_height"
            android:background="@color/light_dark_gray"
            android:padding="@dimen/common_padding_item_in_list"
            android:orientation="horizontal">
            <com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout
                android:id="@+id/flSubImage1Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                app:foreground="@drawable/item_selector">
                <ImageView
                    android:id="@+id/ivSubImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout>
            <com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout
                android:id="@+id/flSubImage2Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                app:foreground="@drawable/item_selector">
                <ImageView
                    android:id="@+id/ivSubImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/common_padding_item_in_list"/>
            </com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout>
            <com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout
                android:id="@+id/flSubImage3Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                app:foreground="@drawable/item_selector">
                <ImageView
                    android:id="@+id/ivSubImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding_item_in_list"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/very_dark_gray"
                    android:layout_alignBottom="@+id/ivSubImage3"
                    android:layout_alignLeft="@+id/ivSubImage3"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_alignRight="@+id/ivSubImage3"
                    android:layout_alignTop="@+id/ivSubImage3"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:text="+6" />
            </com.phannguyen.statusshare.ui.components.views.ForegroundRelativeLayout>
        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>